#include <iostream>
#include <vector>
#include <string>

using namespace std;

string XML_Prettify(string xml) {
    string s;
    int ind =0;
    string str="";
    int open = 0;
    int close = 0;
    string save;
    string sb;
    int i=0;
    while(i < xml.size()) {
        s = xml[i];
        sb = xml[i+1];
        if(s == "<" && sb!="/"){ //If it is not a closing tag!!
            save = "";
            while(s!=">"){
                s = xml[i];
                save +=s;
                i++;
                }
            open++;
            close = 0;
            if (open > 1) {
                ind++;
                }
            for (int j = 0; j < ind; j++) {
                str += "\t";		//print tab
                }
            str += save + "\n";	//print output
        }
        
